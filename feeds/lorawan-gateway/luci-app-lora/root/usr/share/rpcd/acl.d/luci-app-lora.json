{
    "luci-app-lora": {
        "description": "Grant UCI access to lora configuration",
        "read": {
            "file": {
                "/tmp/lora/log": [
                    "read"
                ],
                "/sbin/logread": [
                    "exec"
                ],
                "/etc/device_eui": [
                    "read"
                ]
            },
            "ubus": {
                "uci": [
                    "get"
                ],
                "luci": [
                    "getInitList"
                ]
            },
            "uci": [
                "lora",
                "lora-basicstation",
                "chirpstack",
                "chirpstack-concentratord",
                "chirpstack-udp-forwarder",
                "chirpstack-mqtt-forwarder"
            ]
        },
        "write": {
            "ubus": {
                "uci": [
                    "set",
                    "commit"
                ],
                "luci": [
                    "setInitAction"
                ]
            },
            "uci": [
                "lora",
                "lora-basicstation",
                "chirpstack",
                "chirpstack-concentratord",
                "chirpstack-udp-forwarder",
                "chirpstack-mqtt-forwarder"
            ]
        }
    }
}
